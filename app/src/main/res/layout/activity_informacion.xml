<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".ActivityInformacion">

    <Button
        android:id="@+id/regresarBoton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:layout_marginBottom="56dp"
        android:text="REGRESAR"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#EA0909" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="184dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagenumg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="69dp"
        android:layout_marginTop="40dp"
        android:text="Universidad Mariano Galvez de Guatemala"
        android:textColor="#041991"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:strokeColor="@color/purple_700" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="361dp"
        android:layout_height="38dp"
        android:text="Joselito Augusto Giron Martinez"
        android:textColor="#041991"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:strokeColor="@color/purple_700" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="361dp"
        android:layout_height="38dp"
        android:text="Programacion II"
        android:textColor="#041991"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:strokeColor="@color/purple_700" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="361dp"
        android:layout_height="38dp"
        android:text="Examen Final"
        android:textColor="#041991"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:strokeColor="@color/purple_700" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="361dp"
        android:layout_height="38dp"
        android:text="Noviembre 2021"
        android:textAlignment="center"
        android:textColor="#041991"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:strokeColor="@color/purple_700" />

</androidx.constraintlayout.widget.ConstraintLayout>